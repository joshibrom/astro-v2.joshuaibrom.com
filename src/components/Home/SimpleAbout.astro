---
import AboutStatement from '../AboutStatement.astro';

import config from '../../util/config.ts';

const { headerHeightNum } = config;
---

<div class="flex flex-col gap-8">
    <div class="flex flex-col gap-1">
        <hr class="border-poimandres-lowerBlue" />
        <h3 style={`height: ${headerHeightNum}px`} class="flex items-center justify-center text-2xl md:text-4xl lg:text-5xl text-poimandres-brightMint">About</h3>
        <hr class="border-poimandres-lowerBlue" />
    </div>
    <AboutStatement />
    <a href="#" class="underline hover:text-poimandres-brightYellow transition-colors">My Resume</a>
    <a href="/about" class="w-fit py-3 px-6 text-poimandres-bg bg-poimandres-offWhite hover:bg-poimandres-brightYellow hover:rounded-md transition-all">
        Learn More
    </a>
</div>
